generator client {
  provider     = "prisma-client-js"
  moduleFormat = "esm"
}

datasource db {
  provider = "postgresql"
}

enum RoomStatus {
  OPEN
  IN_GAME
  CLOSED
}

enum GameMode {
  CHAT
  IN_PERSON
}

enum Winner {
  IMPOSTORS
  INNOCENTS
}

enum Role {
  IMPOSTOR
  INNOCENT
}

model User {
  id        String   @id @default(cuid())
  anonId    String   @unique
  nickname  String
  createdAt DateTime @default(now())

  roomPlayers RoomPlayer[]
  gamePlayers GamePlayer[]
}

model Room {
  id         String     @id
  status     RoomStatus @default(OPEN)
  createdAt  DateTime   @default(now())
  hostUserId String?

  roomPlayers RoomPlayer[]
  games       Game[]
}

model RoomPlayer {
  id       String    @id @default(cuid())
  roomId   String
  userId   String
  joinedAt DateTime  @default(now())
  leftAt   DateTime?

  room Room @relation(fields: [roomId], references: [id])
  user User @relation(fields: [userId], references: [id])

  @@unique([roomId, userId])
  @@index([roomId])
  @@index([userId])
}

model Game {
  id            String    @id @default(cuid())
  roomId        String
  mode          GameMode
  word          String?
  impostorCount Int
  startedAt     DateTime  @default(now())
  endedAt       DateTime?
  winner        Winner?

  room        Room         @relation(fields: [roomId], references: [id])
  gamePlayers GamePlayer[]
}

model GamePlayer {
  id           String    @id @default(cuid())
  gameId       String
  userId       String
  role         Role
  eliminatedAt DateTime?

  game Game @relation(fields: [gameId], references: [id])
  user User @relation(fields: [userId], references: [id])

  @@unique([gameId, userId])
  @@index([gameId])
  @@index([userId])
}
